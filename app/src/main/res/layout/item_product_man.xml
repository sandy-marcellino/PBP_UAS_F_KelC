<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#bbb1b2"
        android:layout_marginBottom="3dp"
        android:id="@+id/ParentAdapter">

        <LinearLayout
            android:id="@+id/linear_layout_man"
            android:layout_width="match_parent"
            android:background="#bbc2bf"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/imageProductM"
                    android:layout_width="110dp"
                    android:layout_height="110dp">
                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtNamaProductM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Nama Produk"
                        android:textSize="12dp"
                        style="@style/TextAppearance.MaterialComponents.Headline6"/>
                    <TextView
                        android:id="@+id/txtDeskripsiProductM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="deskripsi produk"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/txtHargaProductM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="7dp"
                        android:text="harga produk"
                        android:textSize="12dp"
                        style="@style/TextAppearance.MaterialComponents.Headline5"/>
                </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
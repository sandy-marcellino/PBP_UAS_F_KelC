<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:id="@+id/listManAdmin"
    android:background="#BBB1B2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imageCvProductMan"
            android:layout_marginLeft="20dp"
            android:layout_width="110dp"
            android:layout_height="110dp">
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtCvNamaProductM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="12dp"
                style="@style/TextAppearance.MaterialComponents.Headline6"/>
            <TextView
                android:id="@+id/txtCvDeskripsiProductM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/txtCvHargaProductM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="7dp"
                android:textSize="12dp"
                style="@style/TextAppearance.MaterialComponents.Headline5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnDeleteCvProductMan"
                    android:layout_marginLeft="20dp"
                    android:text="Delete"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:icon="@drawable/ic_baseline_delete_forever_24"
                    android:title="Delete"
                    />
                <Button
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnUpdateCvProductMan"
                    android:text="Update"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_baseline_create_24"
                    android:title="Delete"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>